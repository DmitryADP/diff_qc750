ifdef NV_COMPONENT_FLAG_SHARED_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME                  := nvmm
NV_COMPONENT_OWN_INTERFACE_DIR     := .
NV_COMPONENT_SOURCES               := \
	nvmm.c \
	transport/nvmm_contextmanager.c \
	transport/nvmm_stats.c \
	transport/nvmm_transport_client.c
NV_COMPONENT_INCLUDES              := \
	include
NV_COMPONENT_CFLAGS                += \
	-DNVMM_BUILT_DYNAMIC=1
NV_COMPONENT_HAS_BROKEN_CODE       := cast-align
NV_COMPONENT_NEEDED_INTERFACE_DIRS := \
	manager \
	service \
	utils \
	$(NV_SOURCE)/core/drivers/nvrm \
	$(NV_SOURCE)/core/drivers/nvrm/graphics \
	$(NV_SOURCE)/core/utils/nvos
NV_COMPONENT_NEEDED_WHOLE_STATIC_INTERFACE_DIRS := \
	transport

include $(NV_BUILD_SHARED_LIBRARY)
endif

