ifdef NV_COMPONENT_FLAG_STATIC_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME              := libnvavpuart
NV_COMPONENT_OWN_INTERFACE_DIR := .

ifeq ($(NV_BUILD_CONFIGURATION_IS_EMBEDDED), 1)
NV_COMPONENT_SOURCES           := avp_uart_stub.c
else
NV_COMPONENT_SOURCES           := \
                                  avp_uart.c \
                                  avp_vsnprintf.c
ifneq ($(NV_TARGET_BOOTLOADER_PINMUX),kernel)
NV_COMPONENT_SOURCES           += $(NV_TARGET_SOC)/avp_uart_soc.c
endif
endif
NV_COMPONENT_INCLUDES          := \
        ../../hwinc \
        ../../hwinc/$(NV_TARGET_SOC_FAMILY) \
        ../../../utils/nvos/aos \
        ../../nvboot/$(NV_TARGET_SOC)/include \
        $(NV_COMPONENT_DIR)/$(NV_TARGET_SOC) \
        $(NV_COMPONENT_DIR)

ifeq ($(NV_TARGET_SOC),ap20)
NV_COMPONENT_CFLAGS += \
        -DCONFIG_PLLP_BASE_AS_408MHZ=0
else
NV_COMPONENT_CFLAGS += \
        -DCONFIG_PLLP_BASE_AS_408MHZ=1
endif

ifeq ($(NV_TARGET_BOOTLOADER_PINMUX),kernel)
NV_COMPONENT_CFLAGS += -DSET_KERNEL_PINMUX
endif

#
# NOTE: The code from these modules is also executed on the AVP!
#       Therefore they need to be compiled with code generation flags
#       compatible with AVP, i.e. ARMv4T ARM code.
#
NV_COMPONENT_CODE_GENERATION   := avp

include $(NV_BUILD_STATIC_LIBRARY)
endif

