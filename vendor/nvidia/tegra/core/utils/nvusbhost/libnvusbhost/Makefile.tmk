ifeq ($(NV_HOST_OS), linux)
_common_sources              := \
	linux/nvusbhost_linux.c

else ifeq ($(NV_HOST_OS), darwin)
_common_sources              := \
	darwin/nvusbhost_darwin.c \
	darwin/usb_osx.c

else ifeq ($(NV_HOST_OS),windows)
_common_sources              := \
	win32/nvusbhost.c
endif

# Static lib
ifdef NV_COMPONENT_FLAG_STATIC_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME            := libnvusbhost

NV_COMPONENT_SOURCES         := \
	$(_common_sources)

# We need the Linux kernel headers from the build host in order to compile
# in USB support. The build host must be at least running kernel 2.6.20.
ifeq ($(NV_HOST_OS), linux)
NV_COMPONENT_INCLUDES        := \
	/usr/include

else ifeq ($(NV_HOST_OS), windows)
NV_COMPONENT_INCLUDES	     := \
	$(NV_TOOLS)/tools/ddk/nt6/6000/inc/crt \
	$(NV_TOOLS)/tools/ddk/nt6/6000/inc/ddk \
	$(NV_TOOLS)/tools/ddk/nt6/6000/inc/api
endif

endif

# Shared lib
ifdef NV_COMPONENT_FLAG_SHARED_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME              := nvusbhost
NV_COMPONENT_OWN_INTERFACE_DIR := .
NV_COMPONENT_SOURCES           := \
	$(_common_sources)

# We need the Linux kernel headers from the build host in order to compile
# in USB support. The build host must be at least running kernel 2.6.20.
ifeq ($(NV_HOST_OS), linux)
NV_COMPONENT_INCLUDES        := \
	/usr/include
endif

NV_COMPONENT_NEEDED_INTERFACE_DIRS := \
	$(NV_SOURCE)/core/utils/nvos

include $(NV_BUILD_SHARED_LIBRARY)
endif

# Reset local variable
_common_sources :=

