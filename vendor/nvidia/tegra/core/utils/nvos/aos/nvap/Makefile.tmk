ifdef NV_COMPONENT_FLAG_STATIC_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME              := libnvos_aos_avp
NV_COMPONENT_OWN_INTERFACE_DIR := .
NV_COMPONENT_SOURCES           := \
	bootloader.c \
	bootloader_ap20.c \
	bootloader_t30.c

NV_COMPONENT_INCLUDES          := \
	.. \
	../../../aes_keysched_lock \
	../../../../drivers/hwinc \
	../../../../drivers/hwinc/$(NV_TARGET_SOC_FAMILY) \
	../../../../drivers/nvavpgpio

#
# NOTE: The code from these modules is also executed on the AVP!
#       Therefore they need to be compiled with code generation flags
#       compatible with AVP, i.e. ARMv4T ARM code.
#
NV_COMPONENT_CODE_GENERATION   := avp

NV_COMPONENT_HAS_BROKEN_CODE   := ignore-all

ifeq ($(NV_TARGET_SOC),ap20)
NV_COMPONENT_CFLAGS += \
	-DNV_AOS_ENTRY_POINT=0x00108000 \
	-DAES_KEYSCHED_LOCK_WAR_BUG_598910=1 \
	-DCONFIG_PLLP_BASE_AS_408MHZ=0 \
	-DAVP_CACHE_2X=0 \
	-DSE_AES_KEYSCHED_READ_LOCK=0
else
NV_COMPONENT_CFLAGS += \
	-DNV_AOS_ENTRY_POINT=0x80108000 \
	-DAES_KEYSCHED_LOCK_WAR_BUG_598910=0 \
	-DCONFIG_PLLP_BASE_AS_408MHZ=1 \
	-DAVP_CACHE_2X=1 \
	-DSE_AES_KEYSCHED_READ_LOCK=1
endif

ifeq ($(NV_BUILD_CONFIGURATION_IS_EMBEDDED),1)
NV_COMPONENT_CFLAGS += \
	-DNV_EMBEDDED_BUILD
endif

ifeq ($(NV_TARGET_REFERENCE_BOARD),cardhu)
NV_COMPONENT_CFLAGS += -DSET_I2C_EXPANDER
else ifeq ($(NV_TARGET_REFERENCE_BOARD),kai)
# @TODO: is this really needed?
NV_COMPONENT_CFLAGS += -DBOARD_IS_KAI
endif
ifeq ($(NV_TARGET_BOOTLOADER_PINMUX),kernel)
NV_COMPONENT_CFLAGS += -DSET_KERNEL_PINMUX
endif


include $(NV_BUILD_STATIC_LIBRARY)
endif

