ifdef NV_COMPONENT_FLAG_STATIC_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME              := libnv3pserver
NV_COMPONENT_OWN_INTERFACE_DIR := .
NV_COMPONENT_SOURCES           := \
	nv3p_server.c \
	nv3p_server_utils_ap20.c \
	nv3p_server_utils_t30.c \
	nv3p_server_utils.c
NV_COMPONENT_INCLUDES          := \
	../../drivers/hwinc \
	../../drivers/hwinc/$(NV_TARGET_SOC_FAMILY) \
	../nvdiagnostics/sd \
	../nvdiagnostics/se \
	../nvdiagnostics/pwm \
	../nvdiagnostics/disp/dsi

NV_COMPONENT_HAS_BROKEN_CODE   := cast-align

NV_COMPONENT_CFLAGS            += \
	-DNVODM_BOARD_IS_FPGA=0 \
	-DNVODM_BOARD_IS_SIMULATION=0

ifneq ($(filter ap20, $(NV_TARGET_SOC)),)
NV_COMPONENT_CFLAGS  += \
	-DNV_AOS_ENTRY_POINT=0x00108000 \
	-DNV_CHARGE_ENTRY_POINT=0x40008000
else
NV_COMPONENT_CFLAGS  += \
	-DNV_AOS_ENTRY_POINT=0x80108000 \
	-DNV_CHARGE_ENTRY_POINT=0x4000a000
endif

ifeq ($(NV_BUILD_CONFIGURATION_IS_EMBEDDED),1)
NV_COMPONENT_CFLAGS  += \
	-DNV_EMBEDDED_BUILD
endif

include $(NV_BUILD_STATIC_LIBRARY)
endif

