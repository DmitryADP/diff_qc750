ifdef NV_COMPONENT_FLAG_STATIC_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

NV_COMPONENT_NAME              := libnvaboot
NV_COMPONENT_OWN_INTERFACE_DIR := .
NV_COMPONENT_SOURCES           := \
	nvaboot.c \
	nvaboot_ap20.c \
	nvaboot_blockdev_nice.c \
	nvaboot_bootfs.c \
	nvaboot_rawfs.c \
	nvaboot_t30.c \
	nvaboot_usbf.c \
	nvaboot_warmboot_sign.c
NV_COMPONENT_SOURCES_PREPROCESSED := \
	nvaboot_sanitize.S \
	nvaboot_warmboot_avp_$(NV_TARGET_SOC).S
NV_COMPONENT_INCLUDES          := \
	../nv3p \
	../../drivers/hwinc \
	../../drivers/hwinc/$(NV_TARGET_SOC_FAMILY) \
	../../drivers/nvrm/nvrmkernel/core/common

NV_COMPONENT_HAS_BROKEN_CODE := ignore-all

ifeq ($(NV_TARGET_SOC),ap20)
NV_COMPONENT_CFLAGS            += \
	-DCONFIG_PLLP_BASE_AS_408MHZ=0 \
	-DHAS_SE_CONTROLLER_INSTANCE=0
else
NV_COMPONENT_CFLAGS            += \
	-DCONFIG_PLLP_BASE_AS_408MHZ=1 \
	-DHAS_SE_CONTROLLER_INSTANCE=1
endif

ifeq ($(NV_BUILD_CONFIGURATION_IS_ANDROID),1)
NV_COMPONENT_SOURCES           += \
	nvaboot_sanitize_keys.c

ifeq ($(NV_BUILD_CONFIGURATION_IS_SECURE_OS),1)
NV_COMPONENT_CFLAGS            += \
	-DCONFIG_TRUSTED_FOUNDATIONS
NV_COMPONENT_INCLUDES          += \
	$(NV_ANDROID_TOP)/3rdparty/trustedlogic/sdk/include/$(NV_TARGET_REFERENCE_BOARD)
endif

endif

ifneq ($(NV_BUILD_CONFIGURATION_IS_EMULATION),1)
# FPGA and simulation platforms can never support USB changing
NV_COMPONENT_CFLAGS            += \
	-DLPM_BATTERY_CHARGING=1
endif

include $(NV_BUILD_STATIC_LIBRARY)
endif

